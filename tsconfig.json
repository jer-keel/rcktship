{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    },
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "exclude": [
    "**/__tests__/*.test.ts",
    "**/__mocks__/**.ts"
  ]
}
